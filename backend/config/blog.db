// Log the error if any query fails
db.serialize(() => {
    db.run(`
        CREATE TABLE IF NOT EXISTS blogs (
            id INTEGER PRIMARY KEY,
            title TEXT,
            content TEXT
        )
    `, function (err) {
        if (err) {
            console.error("Error creating table:", err.message);
        } else {
            console.log("Table created successfully!");
        }
    });
});
